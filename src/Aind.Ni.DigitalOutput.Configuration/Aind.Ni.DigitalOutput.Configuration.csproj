<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net462</TargetFramework>
    <Platform>x64</Platform>
    <AssemblyTitle>Aind.Ni.DigitalOutput.Configuration</AssemblyTitle>
    <AssemblyDescription>A Bonsai library for configurable NI-DAQmx Digital Output with external channel configuration support.</AssemblyDescription>
    <AssemblyCompany>Allen Institute for Neural Dynamics</AssemblyCompany>
    <AssemblyProduct>Aind.Ni.DigitalOutput.Configuration</AssemblyProduct>
    <Copyright>Copyright Â© Allen Institute for Neural Dynamics 2024</Copyright>
    <Version>1.6.0</Version>
    <AssemblyVersion>1.6.0.0</AssemblyVersion>
    <FileVersion>1.6.0.0</FileVersion>
    
    <!-- NuGet Package Metadata -->
    <PackageId>Aind.Ni.DigitalOutput.Configuration</PackageId>
    <PackageDescription>A Bonsai library that provides configurable NI-DAQmx Digital Output functionality with external channel configuration support. Enables runtime channel configuration and more flexible digital output workflows. Uses Bonsai.DAQmx for DAQmx assembly dependencies.</PackageDescription>
    <PackageTags>bonsai;daqmx;ni;digital-output;configuration;hardware;automation</PackageTags>
    <PackageProjectUrl>https://github.com/AllenNeuralDynamics/aind-ni-digitaloutput-configuration</PackageProjectUrl>
    <RepositoryUrl>https://github.com/AllenNeuralDynamics/aind-ni-digitaloutput-configuration</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(CI)' == 'true' ">
    <DefineConstants>CI_BUILD</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Bonsai.Core" Version="2.7.0" />
    <PackageReference Include="OpenCV.Net" Version="3.4.1" />
    <PackageReference Include="Rx-Linq" Version="2.2.5" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\..\daqmx\src\Bonsai.DAQmx\Bonsai.DAQmx.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="NationalInstruments.Common">
      <HintPath>..\..\..\daqmx\src\Externals\DAQmx\NationalInstruments.Common.dll</HintPath>
    </Reference>
    <Reference Include="NationalInstruments.DAQmx">
      <HintPath>..\..\..\daqmx\src\Externals\DAQmx\x64\NationalInstruments.DAQmx.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>